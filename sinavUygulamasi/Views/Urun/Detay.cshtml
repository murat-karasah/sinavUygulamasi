@model sinavUygulamasi.Models.UrunModel


@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shader/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4" style="margin-left:45px;">
            <div class="tm-paging-links">
                <nav>
                    <ul style="list-style:none">
                        @if (Model.Urunler.urun_kategori_id == 3)
                        {
                            <li><a href="#" class="tm-paging-link active">Pizza</a></li>
                            <li><a href="#" class="tm-paging-link ">Salad</a></li>
                            <li><a href="#" class="tm-paging-link">Noodle</a></li>
                        }

                        @if (Model.Urunler.urun_kategori_id == 4)
                        {
                            <li><a href="#" class="tm-paging-link ">Pizza</a></li>
                            <li><a href="#" class="tm-paging-link active ">Salad</a></li>
                            <li><a href="#" class="tm-paging-link">Noodle</a></li>
                        }

                        @if (Model.Urunler.urun_kategori_id == 5)
                        {
                            <li><a href="#" class="tm-paging-link ">Pizza</a></li>
                            <li><a href="#" class="tm-paging-link ">Salad</a></li>
                            <li><a href="#" class="tm-paging-link active">Noodle</a></li>
                        }

                    </ul>
                </nav>
            </div>
        </div>
        <article class="col-lg-6">
            <figure class="tm-person">
                <img src="~/Content/img/gallery/@Model.Urunler.urun_resim" alt="Image" class="img-fluid tm-person-img">
                <figcaption class="tm-person-description">
                    <h4 class="tm-person-name">@Model.Urunler.urun_ad </h4>
                    <p class="tm-person-title">@Model.Urunler.kategori.kategori_adi</p>
                    <p class="tm-person-about">
                        @Model.Urunler.urun_aciklama
                    </p>
                    <br />
                    <p>@String.Format(new System.Globalization.CultureInfo("tr-TR"), "{0:c2}", Model.Urunler.fiyat)</p>


                </figcaption>
            </figure>
        </article>
    </div>

    


</div>

       

 
    
           
            
                
              
           

